<?xml version="1.0" encoding="UTF-8"?>
<persistence version="2.0"
	xmlns="http://java.sun.com/xml/ns/persistence" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xsi:schemaLocation="http://java.sun.com/xml/ns/persistence http://java.sun.com/xml/ns/persistence/persistence_2_0.xsd">
	
	<persistence-unit name="Fast-Transpot">
		<provider>org.hibernate.ejb.HibernatePersistence</provider>
		
		<properties>
		
				<!-- Url do Banco -->
			<property name="javax.persistence.jdbc.url" value="jdbc:mysql://localhost/COMPANYSOFTWARE" />
				<!-- Usuario do Banco -->
			<property name="javax.persistence.jdbc.user" value="COMPANYSOFTWARE" />
				<!-- Senha do usuario do Banco -->
			<property name="javax.persistence.jdbc.password" value="COMPANYSOFTWARE22" />
				<!-- Driver do Banco -->
			<property name="javax.persistence.jdbc.driver" value="com.mysql.jdbc.Driver" />
			
				<!-- update - Cria as tabela  ou alterar . Altera sem apagar os dados-->
				<!-- create - Apagas as tabelas e cria novamente  - Perdendo todos os dados-->
			<property name="hibernate.hbm2ddl.auto" value="update" />
			
			<!-- Exibir o sql no console -->
			<property name="hibernate.show_sql" value="true" />
			<!-- Usar dialect do mysql no console -->
			<property name="hibernate.dialect" value="org.hibernate.dialect.MySQL5Dialect" />
		</properties>
	</persistence-unit>
	
</persistence>